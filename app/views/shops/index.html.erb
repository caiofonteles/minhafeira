<div class="banner-div">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1488459716781-31db52582fe9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1000&q=60);">
    <div class= "banner-content">
      <h1><strong>Minha Feira</strong></h1>
      <p>Trazendo toda a sa√∫de da sua feira para a sua casa.</p>
      <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" >
         <button name="button" type="submit" class="btn btn-flat">
         <i class="fas fa-search"></i> Search
         </button>
      </div>
      <% end %>
     </div>
   </div>
</div>

<div class="container">
    <div class="addshop d-flex">
      <br><br>
      <p class = "btn-add-shop"><%= link_to "Quer adicionar a sua loja?", new_shop_path%></p>
      <br><br>
    </div>

  <div class="cards">
     <% Shop.all.each do |shop| %>
      <div class="card">
        <div class="card-body">
          <h4 class="card-title font-weight-bold"><%= shop.name %></h4>
          <p class="card-text"><%= shop.description %></p>
          <p class="card-text-address"><%= shop.address %></p>
          <p class="btn-see-more" > <%=link_to "Veja mais", shop_path(shop) %> </p>
        </div>
      </div>
    <% end %>
  </div>

    <div>
      <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
</div>
