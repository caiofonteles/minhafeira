<div class="banner-div">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1487376480913-24046456a727?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80);">
    <div class= "banner-content">
      <h1><strong>Minha Feira</strong></h1>
      <p>Trazendo toda a sa√∫de da sua feira para a sua casa.</p>
        <div class="d-flex">
          <div>
          <%= form_tag root_path, method: :get do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Pesquise uma banca"
            %>
          </div>
          <div>
            <%= submit_tag "Buscar", class: "btn-search" %>
          <% end %>
          </div>
        </div>
    </div>
  </div>
</div>



<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <div class="cards">
        <% @shops[0..3].each do |shop| %>
          <div class="card">
            <div class="card-body">
              <h4 class="card-title font-weight-bold"><%= shop.name %></h4>
              <p class="card-text"><%= shop.description %></p>
              <p class="card-text-address"><%= shop.address %></p>
              <div>
                <%=link_to "Veja mais",
                   shop_path(shop),
                   class: "btn-see-more" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <% (1..(@shops.length-4)).each do |e| %>
      <% f = e + 3 %>
      <div class="carousel-item">
        <div class="cards">
          <% @shops[e..f].each do |shop| %>
            <div class="card">
              <div class="card-body">
                <h4 class="card-title font-weight-bold"><%= shop.name %></h4>
                <p class="card-text"><%= shop.description %></p>
                <p class="card-text-address"><%= shop.address %></p>
                <div >
                  <%=link_to "Veja mais",
                     shop_path(shop),
                     class: "btn-see-more" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
   <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
</div>

  <div class = "d-flex justify-content-center">
    <div id="map"
      style="width: 100%; height: 300px; margin-bottom:16px"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>
